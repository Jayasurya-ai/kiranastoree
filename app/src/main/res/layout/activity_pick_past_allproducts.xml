<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PickPastAllproducts">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relPickupOnpast">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pickupUsernamepast"
            android:text="Username"
            android:layout_margin="5dp"
            android:layout_toStartOf="@id/pickupUserphonepast"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pickupUserphonepast"
            android:text=""
            android:layout_margin="7dp"
            android:layout_alignParentEnd="true"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#4d4d4d"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pickuppastPaymodetxt"
            android:text="Payment mode :"
            android:layout_below="@id/pickupUsernamepast"
            android:layout_margin="7dp"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#4d4d4d"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pickuppastPaymode"
            android:text=""
            android:layout_margin="7dp"
            android:layout_below="@id/pickupUserphonepast"
            android:layout_alignParentEnd="true"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#4d4d4d"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relPickupOnpast">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pordersplacedRecycler3"
            android:layout_margin="5dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#42a626"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Price:"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:id="@+id/ptosk3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/pbagrs3"
                android:textColor="@android:color/white"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>