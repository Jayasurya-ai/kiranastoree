<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userha">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editFab"
                    android:src="@drawable/ic_baseline_camera_enhance"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="65dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/shopProfile"
                    android:src="@drawable/shopimage" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/userName"
                    android:text="Your Name"
                    android:layout_toEndOf="@id/shopProfile"
                    android:layout_marginTop="30dp"
                    android:textColor="#42a626"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginStart="5dp"
                    android:textSize="17sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="mobile Number"
                    android:layout_toEndOf="@id/shopProfile"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:id="@+id/user_mobile"
                    android:textColor="#4d4d4d"
                    android:layout_below="@+id/userName"
                    android:textSize="13sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/shopStatustxt"
                    android:text="Status :"
                    android:layout_below="@id/user_mobile"
                    android:layout_toEndOf="@id/shopProfile"
                    android:layout_marginStart="15dp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"/>

                <Switch
                    android:id="@+id/switchStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:switchMinWidth="56dp"
                    android:checked="true"
                    android:layout_below="@id/user_mobile"
                    android:layout_toEndOf="@id/shopStatustxt"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:textOff="OFF"
                    android:textOn="ON"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/shopStatus"
                    android:text="Open/Close"
                    android:layout_below="@id/user_mobile"
                    android:layout_toEndOf="@id/switchStatus"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save Profile"
                    android:background="@drawable/edittextbackground"
                    android:padding="5dp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/saveProfile"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:fontFamily="@font/montserrat"
                    android:textSize="15sp"
                    android:textColor="#47a626" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/editProfile"
                    android:src="@drawable/ic_baseline_edit"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"/>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About Us"
                    android:id="@+id/cardAbout"
                    android:drawableStart="@drawable/ic_baseline_people"
                    android:drawablePadding="15dp"
                    android:textColor="#42a626"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:paddingEnd="15dp"
                    android:layout_marginStart="10dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terms &amp; Conditions"
                    android:id="@+id/cardTerms"
                    android:textColor="#42a626"
                    android:textSize="15sp"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/montserrat"
                    android:drawableStart="@drawable/ic_baseline_speaker"

                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:paddingEnd="15dp"
                    android:layout_marginStart="10dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Feedback"
                    android:id="@+id/cardFeedback"
                    android:drawableStart="@drawable/ic_baseline_feedback"
                    android:drawablePadding="15dp"
                    android:textColor="#42a626"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:paddingEnd="15dp"
                    android:layout_marginStart="10dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Share App"
                    android:id="@+id/cardShare"
                    android:drawableStart="@drawable/ic_baseline_share"
                    android:drawablePadding="15dp"
                    android:textColor="#42a626"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:paddingEnd="15dp"
                    android:layout_marginStart="10dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disclaimer"
                    android:id="@+id/cardDesclaimer"
                    android:drawableStart="@drawable/ic_baseline_event_note"
                    android:drawablePadding="15dp"
                    android:textColor="#42a626"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:paddingEnd="15dp"
                    android:layout_marginStart="10dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Help &amp; Support"
                    android:id="@+id/cardHelp"
                    android:drawableStart="@drawable/ic_baseline_live_help"
                    android:drawablePadding="15dp"
                    android:textColor="#42a626"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:paddingEnd="15dp"
                    android:layout_marginStart="10dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/userha"
        android:layout_margin="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/cardLogout"
            android:textColor="#42a626"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat"
            android:layout_centerVertical="true"
            android:drawablePadding="15dp"
            android:drawableStart="@drawable/ic_baseline_power_settings"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:textAllCaps="true"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>
    </RelativeLayout>


    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/nav_notify"
        android:padding="1dp"
        android:fitsSystemWindows="true"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_shape"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_nav_menu"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>