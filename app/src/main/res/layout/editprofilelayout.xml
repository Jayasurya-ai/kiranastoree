<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@android:color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/edithouse"
                android:layout_below="@+id/usaddress"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="30dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/montserrat"
                    android:hint="Store Name"
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="15sp">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/editlan"
                android:layout_below="@+id/edithouse"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/montserrat"
                    android:hint="Email ID"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textSize="15sp">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/edithouse"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editminorder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/montserrat"
                    android:hint="Minimum Order value"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textSize="15sp">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp"
                android:background="@drawable/btnstylegreen"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/montserrat"
                android:textAllCaps="false"
                android:textSize="17dp"
                android:id="@+id/update"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/btnstyleblack"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                android:textColor="@android:color/white"
                android:id="@+id/cancel"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>