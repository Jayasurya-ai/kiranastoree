<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllPastOrders">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deliverUsernameonpast"
            android:text="Username"
            android:layout_margin="5dp"
            android:layout_toStartOf="@id/deliveryUserphoneonpast"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deliveryUserphoneonpast"
            android:text=""
            android:layout_margin="7dp"
            android:layout_alignParentEnd="true"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#4d4d4d"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deliverAtpst"
            android:text="Delivered at:"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:layout_below="@id/deliverUsernameonpast"
            android:fontFamily="@font/montserrat"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deliveryUserAddrongoing"
            android:text=""
            android:layout_margin="7dp"
            android:layout_below="@id/deliveryUserphoneonpast"
            android:layout_toEndOf="@id/deliverAtpst"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#4d4d4d"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment mode :"
            android:layout_below="@id/deliveryUserAddrongoing"
            android:layout_margin="7dp"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#4d4d4d"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homepastPaymode"
            android:layout_margin="7dp"
            android:layout_below="@id/deliverAtpst"
            android:layout_alignParentEnd="true"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#4d4d4d"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/homepastPaymode"
            android:id="@+id/ordersplacedRecycler3"
            android:layout_margin="5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#42a626"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Price:"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:id="@+id/tosk3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:id="@+id/bagrs3"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp" />
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>