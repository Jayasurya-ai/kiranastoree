<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior=""
    tools:ignore="MissingDefaultResource">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardElevation="10dp"
        android:padding="10dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Information"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorText"/>
                <View
                    android:layout_width="70dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="#47a626"/>

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="75dp"
                    android:src="@drawable/ic_baseline_info_24"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:layout_margin="20dp"
                    android:text="MINIMUM ORDER PRICE"
                    android:textAlignment="center"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/spin_min_order"
                    android:entries="@array/spin_minim"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:layout_margin="20dp"
                    android:text="DELIVERY OPTIONS"
                    android:textAlignment="center"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginStart="20dp"
                            android:id="@+id/delivimage"
                            android:src="@drawable/delivery"/>

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Home Delivery"
                            android:fontFamily="@font/montserrat"
                            android:id="@+id/check_home_Delivery"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="30dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginStart="20dp"
                            android:id="@+id/pick_up"
                            android:src="@drawable/shop"/>

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pick from Store"
                            android:fontFamily="@font/montserrat"
                            android:id="@+id/check_pick_up"/>
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/Ok"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Save"
                    android:fontFamily="@font/montserrat"
                    android:textSize="17sp"
                    android:background="@drawable/btnstylegreen"
                    android:textColor="@android:color/white"
                    android:padding="10dp"/>



            </LinearLayout>
        </ScrollView>


    </androidx.cardview.widget.CardView>
</FrameLayout>
