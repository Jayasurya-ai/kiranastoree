<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllProductsOngoing">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deliverUsernameongoing"
            android:text="Username"
            android:layout_margin="5dp"
            android:layout_toStartOf="@id/deliveryUserphoneongoing"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deliveryUserphoneongoing"
            android:text=""
            android:layout_margin="7dp"
            android:layout_alignParentEnd="true"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#4d4d4d"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deliverAtongoing"
            android:text="Deliver at:"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:layout_below="@id/deliverUsernameongoing"
            android:fontFamily="@font/montserrat"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deliveryUserAddrongoing"
            android:text=""
            android:layout_margin="7dp"
            android:layout_below="@id/deliveryUserphoneongoing"
            android:layout_toEndOf="@id/deliverAtongoing"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat"
            android:textColor="#4d4d4d"/>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ordersplacedRecycler2"
            android:layout_below="@id/deliveryUserAddrongoing"
            android:layout_margin="5dp"/>

        <RelativeLayout
            android:id="@+id/fjssj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:background="#42a626"
            android:padding="10dp">

            <TextView
                android:id="@+id/tosk2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Total Price:"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bagrs2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:text="Rs"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fjssj"
        android:layout_marginBottom="10dp"
        android:id="@+id/starteddelivery">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Start Delivery"
            android:layout_marginStart="20dp"
            android:padding="3dp"
            android:textSize="10dp"
            android:background="@drawable/btnstylegreen"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"
            android:id="@+id/accept2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:background="@drawable/btnstylegreen"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="10sp"
            android:visibility="visible"
            android:text="Delivered"
            android:id="@+id/decline2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"/>
    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>